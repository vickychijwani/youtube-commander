{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "flowtype/require-valid-file-annotation": [2, "always"]
  }
}
